<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gougou" >

    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.gougou.GougouApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 设置环信应用的appkey -->
        <meta-data android:name="EASEMOB_APPKEY"  android:value="17710671059#gougou" />
        <!-- 声明sdk所需的service SDK核心功能-->
        <service android:name="com.hyphenate.chat.EMChatService" android:exported="true"/>
        <!-- 声明sdk所需的receiver -->
        <receiver android:name="com.hyphenate.chat.EMMonitorReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REMOVED"/>
                <data android:scheme="package"/>
            </intent-filter>
            <!-- 可选filter -->
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <activity
            android:theme="@style/Theme"
            android:name=".main.MainActivity"
            android:label="@string/app_name">
        </activity>

        <!-- 邀请-->
        <activity
            android:theme="@style/Theme"
            android:name=".user.invitation.InvitationPage"
            android:label="@string/app_name">
        </activity>
        HeixiuBroadCastSettingsPage

        <!-- 嘿咻设置 -->
        HeixiuSettingsPage
        <activity
            android:theme="@style/Theme"
            android:name=".user.HeixiuSettingsPage"
            android:label="@string/app_name">
        </activity>
        <!-- 咻广播设置 -->
        <activity
            android:theme="@style/Theme"
            android:name=".heixiubroadcast.HeixiuBroadCastSettingsPage"
            android:label="@string/app_name">
        </activity>
        <!-- 咻广播 -->
        <activity
            android:theme="@style/Theme"
            android:name=".heixiubroadcast.HeixiuBroadCastPage"
            android:label="@string/app_name">
        </activity>
        <!-- 魅力等级 -->
        <activity
            android:theme="@style/Theme"
            android:name=".user.CharmLevelActivity"
            android:label="@string/app_name">
        </activity>
        <!-- 钱包页面 -->
        <activity
            android:theme="@style/Theme"
            android:name=".user.WalletActivity"
            android:label="@string/app_name">
        </activity>

        <!-- 钱包提现 -->
        <activity
            android:theme="@style/Theme"
            android:name=".user.WalletCashActivity"
            android:label="@string/app_name">
        </activity>

        <!-- 拉黑举报 -->
        <activity
            android:theme="@style/Theme"
            android:name=".user.PullBlackReportActivity"
            android:label="@string/app_name">
        </activity>

        <!-- 充值 -->
        <activity
            android:theme="@style/Theme"
            android:name=".user.RechargeActivity"
            android:label="@string/app_name">
        </activity>

        <!-- 用户详情页 -->
        <activity
            android:theme="@style/Theme"
            android:name="com.gougou.user.UserDetailActivity"
            android:label="@string/app_name">
        </activity>

        <!-- 用户注册页 -->
        <activity
            android:theme="@style/Theme"
            android:name=".user.register.RegisterPage"
            android:label="@string/app_name">
        </activity>

        <!-- 用户登陆 -->
        <activity
            android:theme="@style/Theme"
            android:name=".user.login.LoginPage"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 用户资料修改 -->
        <activity
            android:theme="@style/Theme"
            android:name=".user.login.PersonalDataPage"
            android:label="@string/app_name">

        </activity>

        <!-- 聊天祥情页 -->
        <activity
            android:theme="@style/Theme"
            android:name="com.gougou.chat.ChatPage"
            android:label="@string/app_name">
        </activity>

    </application>
</manifest>
