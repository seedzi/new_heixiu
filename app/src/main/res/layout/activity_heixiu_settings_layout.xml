<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 标题 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:paddingLeft="12sp"
        android:paddingRight="12sp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="14sp"
            android:textColor="#8b8b8b"
            android:drawablePadding="2dp"
            android:drawableLeft="@drawable/back"/>

        <TextView
            android:id="@+id/title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="嘿咻设置"
            android:textColor="#000000"
            android:textSize="@dimen/line_txt_size_big"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ececeb"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/xiuxiu_yuyin"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">
        <TextView
            android:text="语音嘿咻"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/tag_1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_item_tag"/>

        <TextView
            android:id="@+id/xiuxiu_yuyin_price"
            android:text="10咻币/分钟"
            android:textColor="#a6a6a6"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tag_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:paddingLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ececeb"/>

    <RelativeLayout
        android:id="@+id/xiuxiu_pic"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">
        <TextView
            android:text="照片嘿咻"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/tag_2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_item_tag"/>

        <TextView
            android:id="@+id/xiuxiu_pic_price"
            android:text="20咻币"
            android:textColor="#a6a6a6"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tag_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:paddingLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ececeb"/>

    <RelativeLayout
        android:id="@+id/xiuxiu_video"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">
        <TextView
            android:text="短视频嘿咻"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/tag_3"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_item_tag"/>

        <TextView
            android:id="@+id/xiuxiu_video_price"
            android:text="90咻币"
            android:textColor="#a6a6a6"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tag_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="11dp"
        android:text="可设置嘿咻最低价格,魅力值V3以上用户可设置,上限根据魅力值调整"
        android:textColor="#b9b9b9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
