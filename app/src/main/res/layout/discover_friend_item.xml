<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <!-- -->
    <com.xiuxiu.widget.CircleImageView
        android:id="@+id/head_img"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="10dp"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/head_default"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_toRightOf="@id/head_img"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安妮贝贝"
        android:textSize="@dimen/line_txt_size_big"/>

    <TextView
        android:id="@+id/age"
        android:layout_toRightOf="@id/head_img"
        android:layout_below="@id/user_name"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:text="24"
        android:gravity="center_vertical|right"
        android:background="@drawable/age_bg"
        android:paddingRight="12px"
        android:textColor="#ffffff"/><!-- android:paddingLeft="5dp" android:textSize="10sp" -->

    <ImageView
        android:id="@+id/vip_grade"
        android:layout_toRightOf="@id/age"
        android:layout_alignBottom="@id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/vip_grade_1"/>

    <TextView
        android:id="@+id/description"
        android:layout_toRightOf="@id/head_img"
        android:layout_below="@id/age"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好无聊,有哥哥愿意和我聊吗."
        android:textColor="#8b8b8b"
        android:textSize="@dimen/line_txt_size_normal"/>

    <TextView
        android:id="@+id/online_time"
        android:layout_marginTop="16dp"
        android:layout_marginRight="14dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8b8b8b"
        android:textSize="@dimen/line_txt_size_small"
        android:text="15分钟前"/>

    <ImageView
        android:layout_below="@id/online_time"
        android:layout_marginRight="14dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/list_item_play"/>
</RelativeLayout>
    <View
        android:layout_marginLeft="79dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#b2b2b2"/>
</LinearLayout>