<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:paddingLeft="12sp"
        android:paddingRight="12sp">
        <TextView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="14sp"
            android:textColor="#8b8b8b"
            android:drawablePadding="2dp"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:text="完善个人资料"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.hyphenate.easeui.widget.CircleImageView
        android:id="@+id/head_img"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/head_img_txt"
        android:layout_marginTop="13dp"
        android:text="修改头像"
        android:textColor="#a7a7a7"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:background="#dfdfdf"/>
    <!-- 昵称 -->
    <RelativeLayout
        android:id="@+id/nick_name_layout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nick_name"
            android:layout_marginLeft="15dp"
            android:text="昵称"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/nick_name_edit"
            android:background="@null"
            android:layout_marginLeft="30dp"
            android:hint="点击编辑昵称"
            android:singleLine="true"
            android:layout_marginRight="30dp"
            android:textColorHint="#b7b6b6"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_toRightOf="@id/nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="#dfdfdf"/>

    <!-- 生日 -->
    <RelativeLayout
        android:id="@+id/brithday_layout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/brithday_name"
            android:layout_marginLeft="15dp"
            android:text="生日"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/brithday_value"
            android:layout_marginLeft="30dp"
            android:textColorHint="#b7b6b6"
            android:textSize="16sp"
            android:hint="点击选择出生日期"
            android:layout_toRightOf="@id/brithday_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="#dfdfdf"/>

    <!-- 性别 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/sex_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="性别"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/sex_radio_group"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:weightSum="2">
            <RadioButton
                android:id="@+id/bt_male"
                android:layout_weight="1"
                android:text="男"
                android:button="@null"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/xiuxiu_checked_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/bt_female"
                android:text="女"
                android:button="@null"
                android:drawablePadding="5dp"
                android:layout_marginLeft="18dp"
                android:drawableLeft="@drawable/xiuxiu_checked_selector"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <View
            android:layout_toLeftOf="@id/sex_radio_group"
            android:layout_width="1px"
            android:layout_marginRight="22dp"
            android:background="#dfdfdf"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="#dfdfdf"/>

    <!-- 城市 -->
    <RelativeLayout
        android:id="@+id/city_layout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/city_name"
            android:layout_marginLeft="15dp"
            android:text="城市"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/city_value"
            android:layout_marginLeft="30dp"
            android:hint="点击选择所在城市"
            android:textColorHint="#b7b6b6"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_toRightOf="@id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="#dfdfdf"/>

    <TextView
        android:layout_marginTop="30dp"
        android:textColor="#b7b6b6"
        android:text="性别选择后不可修改,请谨慎填写"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/commit"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:text="提交"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="44dp"
        android:background="@drawable/wallet_bt_bg_disable"/>
</LinearLayout>