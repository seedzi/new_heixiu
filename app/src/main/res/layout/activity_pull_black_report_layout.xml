<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f3f2">

    <!-- 标题 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:paddingLeft="12sp"
        android:paddingRight="12sp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="14sp"
            android:textColor="#8b8b8b"
            android:drawablePadding="2dp"
            android:drawableLeft="@drawable/back"/>

        <TextView
            android:id="@+id/title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拉黑并举报"
            android:textColor="#000000"
            android:textSize="@dimen/line_txt_size_big"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#b2b2b2"/>

    <FrameLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit"
            android:background="@null"
            android:padding="10dp"
            android:gravity="left|top"
            android:hint="填写举报理由..."
            android:layout_width="match_parent"
            android:layout_height="120dp" />
    </FrameLayout>

    <TextView
        android:layout_marginTop="22dp"
        android:layout_marginLeft="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择不良标签"
        android:textColor="#8b8b8b"
        android:textSize="16sp"/>

    <LinearLayout
        android:id="@+id/tag_layout"
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="13dp">
        <CheckBox
            android:text="截图党"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:button="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@drawable/pull_black_report_checked_item_txt_selector"
            android:background="@drawable/pull_black_report_checked_item_selector"
            />
        <CheckBox
            android:text="变态狂"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:button="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@drawable/pull_black_report_checked_item_txt_selector"
            android:background="@drawable/pull_black_report_checked_item_selector"
            />
        <CheckBox
            android:text="低素质"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:button="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@drawable/pull_black_report_checked_item_txt_selector"
            android:background="@drawable/pull_black_report_checked_item_selector"
            />
        <CheckBox
            android:text="骗子"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:button="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@drawable/pull_black_report_checked_item_txt_selector"
            android:background="@drawable/pull_black_report_checked_item_selector"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/commit"
        android:text="提交"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="40dp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:background="@drawable/wallet_bt_bg"/>
</LinearLayout>
