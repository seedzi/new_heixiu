<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:paddingLeft="12sp"
        android:paddingRight="12sp">
        <TextView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="14sp"
            android:textColor="#8b8b8b"
            android:drawablePadding="2dp"
            android:drawableLeft="@drawable/back"/>

        <TextView
            android:id="@+id/title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请"
            android:textColor="#000000"
            android:textSize="@dimen/line_txt_size_big"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8b8b8b"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:background="#ffffff"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/invitation_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你的邀请码"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:textColor="#000000"/>
        <TextView
            android:layout_toRightOf="@id/invitation_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:text="KyzL87z"
            android:textSize="13sp"
            android:textColor="#00b8d0"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="复制邀请码"
            android:textSize="13sp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:background="#00b8d0"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="#8b8b8b"/>

    <TextView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:gravity="center_vertical"
        android:text="邀请别人注册登录并输入你的邀请码绑定,双方各自赠送100咻币\n(赠送账户)。\n如果对方首次充值额度达到100元，再赠送你1000咻币\n(个人账户,可提现)"
        android:textSize="11sp"
        android:paddingLeft="13dp"
        android:textColor="#b9b9b9"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="#ffffff">
        <TextView
            android:text="输入别人邀请码绑定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="13sp"/>
        <TextView
            android:text="已绑定 (咻号：669431)"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#b9b9b9"
            android:textSize="13sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="#ffffff">
        <TextView
            android:text="我邀请的人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="13sp"/>
        <TextView
            android:text="(共获得5600咻币)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#b9b9b9"
            android:textSize="13sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="#8b8b8b"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="13dp"
        android:paddingTop="10dp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/user_name"
            android:text="胡总"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="13sp"/>
        <TextView
            android:text="嘿咻号:8799023"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#b9b9b9"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/zeng_song_zhang_hu"
            android:text="赠送账号"
            android:layout_below="@id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00b8d0"
            android:layout_marginTop="10dp"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/heixiu_bi"
            android:layout_marginLeft="5dp"
            android:text="已赠送100嘿咻币"
            android:layout_toRightOf="@id/zeng_song_zhang_hu"
            android:layout_alignBottom="@id/zeng_song_zhang_hu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#b9b9b9"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/ge_ren_zhang_hao"
            android:text="个人账号"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/heixiu_bi"
            android:layout_alignBottom="@id/heixiu_bi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00b8d0"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/heixiu_b_ge_ren"
            android:text="已赠送100嘿咻币"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/ge_ren_zhang_hao"
            android:layout_alignBottom="@id/ge_ren_zhang_hao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#b9b9b9"
            android:textSize="13sp"/>
    </RelativeLayout>

</LinearLayout>
