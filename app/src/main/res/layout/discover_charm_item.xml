<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:id="@+id/position"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="#d0d0d0"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.gougou.widget.CircleImageView
            android:id="@+id/head_img"
            android:layout_toRightOf="@id/position"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/head_default"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_toRightOf="@id/head_img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安妮贝贝"
            android:textColor="#000000"
            android:textSize="@dimen/line_txt_size_big"/>

        <TextView
            android:id="@+id/age"
            android:layout_toRightOf="@id/head_img"
            android:layout_below="@id/user_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24"
            android:textSize="9sp"
            android:background="@drawable/age_bg"
            android:paddingRight="12px"
            android:textColor="#ffffff"/><!-- android:paddingLeft="5dp" android:textSize="10sp" -->

        <ImageView
            android:id="@+id/vip_grade"
            android:layout_toRightOf="@id/age"
            android:layout_alignBottom="@id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/vip_grade_1"/>

        <ImageView
            android:layout_marginRight="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_item_play"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="65dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dfdfdf"/>
</LinearLayout>