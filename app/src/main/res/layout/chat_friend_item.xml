<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">
        <com.hyphenate.easeui.widget.CircleImageView
            android:id="@+id/head_img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/head_default"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_toRightOf="@id/head_img"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安妮贝贝"
            android:textColor="#000000"
            android:textSize="@dimen/line_txt_size_big"/>

        <TextView
            android:id="@+id/user_age"
            android:layout_toRightOf="@id/user_name"
            android:layout_alignBottom="@id/user_name"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:text="24"
            android:gravity="center_vertical|right"
            android:background="@drawable/male_age_bg"
            android:paddingRight="12px"
            android:textColor="#ffffff"/>

        <ImageView
            android:id="@+id/vip_grade"
            android:layout_toRightOf="@id/user_age"
            android:layout_alignBottom="@id/user_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/charm_1"/>

        <TextView
            android:id="@+id/description"
            android:layout_toRightOf="@id/head_img"
            android:layout_below="@id/user_name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每天会有免费三次招呼机会"
            android:textColor="#777777"
            android:textSize="@dimen/line_txt_size_normal"/>

        <TextView
            android:id="@+id/online_time"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/line_txt_size_small"
            android:textColor="#8b8b8b"
            android:text="15分钟前"/>

    </RelativeLayout>
    <View
    android:layout_marginLeft="79dp"
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="#dfdfdf"/>
</LinearLayout>
