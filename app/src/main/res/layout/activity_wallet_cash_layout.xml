<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f3f2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:paddingLeft="12sp"
        android:paddingRight="12sp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="14sp"
            android:textColor="#8b8b8b"
            android:drawablePadding="2dp"
            android:drawableLeft="@drawable/back"/>

        <TextView
            android:id="@+id/title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现"
            android:textColor="#000000"
            android:textSize="@dimen/line_txt_size_big"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8b8b8b"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="#ffffff">
        <TextView
            android:id="@+id/yi_ti_xian_txt"
            android:layout_marginLeft="13dp"
            android:textSize="13sp"
            android:textColor="#a6a6a6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已提现"/>
        <TextView
            android:id="@+id/yi_ti_xian_txt_xiu_bi"
            android:layout_toRightOf="@id/yi_ti_xian_txt"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2568250咻币"/>
        <TextView
            android:id="@+id/yi_ti_xian_txt_rmb"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥800"/>
    </RelativeLayout>

    <View
        android:layout_marginLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8b8b8b"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="#ffffff">
        <TextView
            android:id="@+id/keyi_ti_xian_txt"
            android:layout_marginLeft="13dp"
            android:textSize="13sp"
            android:textColor="#a6a6a6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可提现"/>
        <TextView
            android:id="@+id/keyi_ti_xian_txt_xiu_bi"
            android:layout_toRightOf="@id/keyi_ti_xian_txt"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2568250咻币"/>
        <TextView
            android:id="@+id/keyi_ti_xian_txt_rmb"
            android:textSize="13sp"
            android:textColor="@color/app_theme_color"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥800"/>
    </RelativeLayout>


    <TextView
        android:layout_marginTop="44dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:text="微信提现"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:background="@drawable/wallet_bt_bg"/>
</LinearLayout>
