<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f3f2">

    <!-- 标题 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:paddingLeft="12sp"
        android:paddingRight="12sp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="14sp"
            android:textColor="#8b8b8b"
            android:drawablePadding="2dp"
            android:drawableLeft="@drawable/back"/>

        <TextView
            android:id="@+id/title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="财富等级"
            android:textColor="#000000"
            android:textSize="@dimen/line_txt_size_big"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8b8b8b"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#12b0c4"
        android:gravity="center">
        <TextView
            android:id="@+id/v_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="V 2"/>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你的当前财富等级"
            android:textSize="11sp"
            android:textColor="#7f14f1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <com.xiuxiu.widget.VipGradeView
            android:id="@+id/vip_grade_view"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:weightSum="7">
            <TextView
                android:layout_weight="1"
                android:text="等级1"
                android:textColor="#a6a6a6"
                android:textSize="9sp"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:text="等级2"
                android:textColor="#a6a6a6"
                android:textSize="9sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:text="等级3"
                android:textColor="#a6a6a6"
                android:textSize="9sp"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:text="等级4"
                android:textColor="#a6a6a6"
                android:textSize="9sp"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:text="等级5"
                android:textColor="#a6a6a6"
                android:textSize="9sp"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:text="等级6"
                android:textColor="#a6a6a6"
                android:textSize="9sp"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:text="等级7"
                android:textColor="#a6a6a6"
                android:textSize="9sp"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <include android:id="@+id/grade_1" layout="@layout/wealth_grade_item_layout" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8b8b8b"/>
    <include android:id="@+id/grade_2" layout="@layout/wealth_grade_item_layout" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8b8b8b"/>
    <include android:id="@+id/grade_3" layout="@layout/wealth_grade_item_layout" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8b8b8b"/>
    <include android:id="@+id/grade_4" layout="@layout/wealth_grade_item_layout" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8b8b8b"/>
    <include android:id="@+id/grade_5"  layout="@layout/wealth_grade_item_layout" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8b8b8b"/>
    <include android:id="@+id/grade_6" layout="@layout/wealth_grade_item_layout" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8b8b8b"/>
    <include android:id="@+id/grade_7" layout="@layout/wealth_grade_item_layout" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8b8b8b"/>

    <TextView
        android:layout_marginTop="9dp"
        android:textSize="11sp"
        android:textColor="#b9b9b9"
        android:layout_marginLeft="13dp"
        android:text="财富值体现了男生在咻羞的财富能力,充值并消费1元,增加1财富分值."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
