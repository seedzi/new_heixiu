<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f3f2">
    <!-- 标题 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="14sp"
            android:textColor="#8b8b8b"
            android:drawablePadding="2dp"
            android:drawableLeft="@drawable/back"/>

        <TextView
            android:id="@+id/title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钱包"
            android:textColor="#000000"
            android:textSize="@dimen/line_txt_size_big"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8b8b8b"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">

        <ImageView
            android:layout_marginTop="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wallet_logo"/>

        <TextView
            android:layout_marginTop="26dp"
            android:layout_gravity="center_horizontal"
            android:text="我的咻币"
            android:textSize="15sp"
            android:textColor="#747373"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/xiuxiu_coin_size"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:text="0"
            android:textSize="30sp"
            android:textColor="#00b8d0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/chong_zhi"
            android:layout_marginTop="54dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="充值"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textColor="#ffffff"
            android:background="@drawable/wallet_bt_bg"/>

        <TextView
            android:id="@+id/ti_xian"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="提现"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textColor="#ffffff"
            android:background="@drawable/wallet_bt_bg_disable"/>

    </LinearLayout>

</LinearLayout>
